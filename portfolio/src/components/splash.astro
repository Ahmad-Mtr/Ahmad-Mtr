---
import IconT from "./theme/IconT.astro";
import Pill from "./theme/Pill.astro";
//import { Image } from "astro:assets";
// import { Icon } from "astro-icon/components";


import Starfield from "./starfield.astro";

import FlipWords from "./FlipWords.astro";
import ButtonLink from "./theme/ButtonLink.astro";
const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full  bg-ctp_bckgrnd ">
  <Starfield />
  <!-- <GridBckgrnd className="absolute inset-0"/> -->
  <!-- <GitHubCorner /> -->
  
  <div class="relative grid h-full  place-items-center    sm:grid-cols-2">
    <div
      class="flex items-center gap-4 self-center sm:gap-4 sm:self-auto sm:justify-self-end
      whitespace-nowrap w-2/3 "
    >
      <!-- <Icon name="logomark" class="size-20 md:size-32" /> -->

      <div class="text-left space-y-2         max-sm:text-wrap ">
        <small class="text-ctp_sky font-mono text-sm"> Hi, my name is </small>

        <h1 class="font-sans text-6xl font-extrabold text-ctp_txt1    max-sm:text-5xl">Ahmad</h1>
        <h2 class="font-sans text-5xl font-extrabold text-ctp_txt2    sm:w-[47.5rem] max-sm:text-wrap max-sm:text-4xl">
          I create things for <FlipWords />.
        </h2>
        <p
          id="text-container-item"
          class="font-sans text-base font-regular text-ctp-subtext0 pb-2 text-wrap"
        >
          I'm a creative Developer from Jordan specializing in designing & building captivating digital Experiences. Currently, I'm a Student pursuing a Computer Science Degree <a
            href="https://www.gju.edu.jo/"
            class="text-ctp_sky font-medium hover:underline hover:text-ctp_sky"
            >@GJU</a
          >.
        </p>
        <!-- Tags -->
        <div class="roles mt-2 sm:flex gap-2 space-x-2  pb-6   max-sm:grid  max-sm:grid-cols-2 space-y-0 max-sm:space-x-0">
          <Pill
            ><IconT icon="code" size="1.33em" gradient={true} /> Developer</Pill
          >
          <Pill
            ><IconT icon="designer" size="1.33em" gradient={true} /> Designer</Pill
          >
          <Pill
            ><IconT icon="pencil-line" size="1.33em" gradient={true} /> Student</Pill
          >
        </div>
        <!-- ButtonLink -->
        <ButtonLink
          content="Email me"
          isIcon={false}
          href="mailto:ahmadmtr@protonmail.com"
          className="focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ctp_muave"
        />
      </div>
      <!-- <div
      id="astronaut"
      class="w-1/3 max-w-3xl self-start sm:w-10/12 bg-red-600 sm:self-auto sm:justify-self-start"
    >
      <!-- <Image
        class="h-full w-full object-cover"
        src={astronautImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="A floating astronaut in a space suit"
      /> -->
      <!-- </div> -->
    </div>
  </div>

  <noscript>
    <style>
      #splash-bg-fallback {
        display: block;
      }
    </style>
  </noscript>

  <style>
    @keyframes float {
      0% {
        transform: translate3d(0, 0, 0);
      }

      100% {
        transform: translate3d(0, 30px, 0);
      }
    }

    #astronaut {
      animation: float linear 2.5s infinite alternate;
    }

    @media (prefers-reduced-motion: reduce) {
      #astronaut {
        @apply animate-none;
      }

      :global(#starfield) {
        @apply hidden;
      }

      #splash-bg-fallback {
        @apply block;
      }
    }
  </style>
</section>