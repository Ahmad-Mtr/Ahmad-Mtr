---
import SkillList from "./skill-list.astro";
import ContentSection from "./content-section.astro";
import type { SkillItem } from "../types";

const frameworks: Array<SkillItem> = [
  {
    title: "Astro",
    icon: "frameworks/astro",
    url: "https://astro.build/",
  },
  {
    title: "Flutter",
    icon: "frameworks/flutter",
    url: "https://flutter.com/",
  },
  {
    title: "React",
    icon: "frameworks/react",
    url: "https://reactjs.org/",
  },
];


